<div class="frame" class="clearfix">


    <h3>Editing book</h3>

        <% if @book.errors.any? %>
            <ul>
                <li class="error">2 errors prohibited this book from being saved:</li>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
            </ul>
        <% end %>


    <%= form_for(@book) do |f| %>

        <h6>Title</h6>
        <div class="book-title-form"><%= f.text_field :title %></div>

        <h6>Body</h6>
        <div class="book-body-form"><%= f.text_area :body %></div>

        <div class="create-book">
        <%= f.submit 'Update Book' %>
        </div>

    <% end %>


    <%= link_to "Show","/books/#{@book.id}" %>

    |

    <%= link_to "Back", "/books" %>


</div>